@model Wedding

<h3>Plan Your Wedding</h3>
<a href="dashboard">Dashboard</a>
<a href="logout">Logout</a>

<div class="contianer mt-3">
    <div class="row">
        <div class="col">
            <form action="planWedding" method="post">
                <div class="form-group">
                    <label for="WedderOne">Wedder One:</label>
                    <input asp-for="WedderOne">
                    <span asp-validation-for="WedderOne" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="WedderTwo">Wedder Two:</label>
                    <input asp-for="WedderTwo">
                    <span asp-validation-for="WedderTwo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Date">Wedding Date:</label>
                    <input asp-for="Date" >
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Address">Wedding Address:</label>
                    <input asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="UserId" value=@ViewBag.userInfo>
                    <input type="submit" value="Create">
                </div>
            </form>
        </div>
    </div>
</div>