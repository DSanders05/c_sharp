@model Dish

<div class="text-center">
<h1>Add a new Dish</h1>
<a href="/">Home</a>
    <form action="/addDish" method="post">
    <div class="form-group">
        <label for="Chef">Chef Name:</label>
        <input asp-for="Chef" class="form-control">
        <span asp-validation-for="Chef" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Dish Name:</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Calories"># of Calories:</label>
        <input asp-for="Calories" class="form-control">
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Tastiness">Tastiness</label>
        <input asp-for="Tastiness" class="form-control">
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" cols="20" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add Dish</button>
    </form>
</div>