@model Dish


<h1>Edit the selected Dish</h1>
<form action="/update/@Model.DishId" method="post">
    <div class="form-group">
        <label for="Chef">Chef Name:</label>
        <input asp-for="Chef" class="form-control">
        <span asp-validation-for="Chef" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Dish Name:</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Calories"># of Calories:</label>
        <input asp-for="Calories" class="form-control">
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Tastiness">Tastiness</label>
        <input asp-for="Tastiness" class="form-control">
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" cols="20" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Edit Dish</button>
    </form>