@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row justify-content-around">
        <div class="col-xs">
            <h1>Products:</h1>
            <hr>
            @{
                foreach(Product p in ViewBag.allProducts)
                {
                    <p class="text-center"><a href="products/@p.ProductId">@p.Name</a></p>
                }
            }
        </div>
        <div class="col-xs">
            <h1>Categories:</h1>
            <hr>
            @{
                foreach(Category c in ViewBag.allCategories)
                {
                    <p class="text-center"><a href="category/@c.CategoryId">@c.Name</a></p>
                }
            }
        </div>
        
    </div>
</div>
