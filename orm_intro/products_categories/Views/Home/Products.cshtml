@model Product

<h1 class="text-center">Products | <a href="Categories">Categories</a></h1>
<a href="/">Home</a>
<hr>

<div class="container">
    <div class="row justify-content-around">
        <div class="col-xs">
            <form action="addProduct" method="post">
                <div class="col-xs-2 text-center">
                    <h1>New Product</h1>
                    <hr>
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Descn">Description:</label>
                        <input asp-for="Desc" class="form-control">
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Price">Price:</label>
                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Product" class="btn btn-success ">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-xs">
            <h1>Existing Products</h1>
            <hr>
            @{
                foreach(Product p in ViewBag.allProducts)
                {
                    <p class="text-center"><a href="products/get/@p.ProductId">@p.Name</a></p>
                }
            }
        </div>
    </div>
</div>
