@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Dojo Survey</h1>
    <form action="dojoSurvey" method="post">
        <div class="form-group">
            <label for="name">Enter Your Name:</label>
            <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="location">Enter Dojo Location:</label>
            <input type="text" name="location" class="form-control">
        </div>
        <div class="form-group">
            <label for="language">Enter Favorite Language:</label>
            <input type="text" name="language" class="form-control">
        </div>
        <div class="form-group">
            <label for="commentSection">Comment (optional):</label>
            <textarea name="commentSection" id="" cols="30" rows="3" class="form-control"></textarea>
        </div>
        <input type="submit" value="Submit" class="btn btn-success" class="form-control">
    </form>
</div>
